if [ $# -ne 2 ]; then
	echo "Usage: <option> song"
	echo "option:"
	echo "  -m morning"
	echo "  -n night"
	echo "  -o other"
	exit 1
fi

option="$1"
song="$2"

# create files at first time
for file in all_morning all_night all_other morning night other; do
	if [ ! -e "$file" ]; then
		touch "$file"
	fi
done

# check if song already exists
if grep "$song" all_morning all_night all_other > /dev/null; then
	echo "Song already exist."
	exit 1
fi

case "$option" in 
	'-m') addto all_morning "$song"
	      addto morning "$song";;
	'-n') addto all_night "$song"
	      addto night "$song";;
	'-o') addto all_other "$song"
	      addto other "$song";;
	   *) echo Unknown option
	      exit 1
esac
